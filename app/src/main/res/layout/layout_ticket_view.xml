<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#E3F2FD"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/logo1"
                android:contentDescription="Logo Kapal"
                app:tint="@color/Blue"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Kapal Para Perintis"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHIP TICKET"
                android:textColor="@color/Blue"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BBDEFB"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSENGER NAME(S):"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/tvPassengerNamesTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1. John Doe (Dewasa)\n2. Baby Doe (Bayi)"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLASS / UPGRADE:"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/tvClassUpgradeTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Kelas Ekonomi (Default)\nKasur Ranjang (x1)"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BBDEFB"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEPARTURE:"
                    android:textSize="12sp"
                    android:textColor="#666666"/>
                <TextView
                    android:id="@+id/tvDepartureLocationTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Sibolga - Pelabuhan ASP"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvDepartureDateTimeTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="11 Juli 2025, 21:00 WIB"
                    android:textColor="#666666"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARRIVAL:"
                    android:textSize="12sp"
                    android:textColor="#666666"/>
                <TextView
                    android:id="@+id/tvArrivalLocationTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="G. Sitoli - Pelabuhan Pelindo"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvArrivalDateTimeTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12 Juli 2025, 07:00 WIB"
                    android:textColor="#666666"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BBDEFB"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:id="@+id/ivBarcodeTicket"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/sample_barcode" android:contentDescription="Barcode Tiket"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvTicketNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="NO. TIKET: 250711WH035"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>