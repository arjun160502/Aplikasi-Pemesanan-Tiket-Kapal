<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacground"
    tools:context=".PasswordChangedSuccessActivity">

    <RelativeLayout
        android:id="@+id/header_layout_success"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#E3F2FD">

        <ImageView
            android:id="@+id/closeButtonSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@drawable/ic_close_circle_gray"
            app:tint="@color/black"
            android:contentDescription="Close Button"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/imageView3_header_success"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="47dp"
            android:contentDescription="App Logo"
            android:src="@drawable/logo1"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageView3_header_success"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:text="Wirajaya Lines"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout_success"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_check_circle_green"
                android:layout_marginBottom="16dp"
                android:contentDescription="Success Icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kata Sandi Berhasil Diubah"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kata sandi pada akun Anda telah berhasil diubah. Silahkan masuk kembali untuk melakukan proses pemesanan"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnLainKali"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lain Kali"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="@color/textBlue"
                    android:textStyle="bold"
                    android:paddingVertical="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_button_outline"/> <Button
                android:id="@+id/btnMasukSekarang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Masuk Sekarang"
                android:backgroundTint="@color/buttonColor"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:layout_marginStart="8dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>