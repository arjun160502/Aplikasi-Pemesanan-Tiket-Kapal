<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bacground"
    tools:context=".PemesananActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#E3F2FD">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black"
            android:contentDescription="Back Button"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/imageView3_header_pemesanan"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="47dp"
            android:contentDescription="App Logo"
            android:src="@drawable/logo1"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageView3_header_pemesanan"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:text="Kapal Para Perintis"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvShipNamePemesanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Kapal : Wira Glory"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:id="@+id/tvDepartureTimePemesanan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="21:00 WIB"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>
                            <TextView
                                android:id="@+id/tvDepartureDatePemesanan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="11 Juli 2025"
                                android:textSize="14sp"
                                android:textColor="#666666" />
                            <TextView
                                android:id="@+id/tvDepartureLocationPemesanan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Sibolga - Pelabuhan ASP"
                                android:textSize="14sp"
                                android:textColor="#666666" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="@color/black"
                            android:layout_marginHorizontal="8dp"
                            android:contentDescription="Arrow Right"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:id="@+id/tvArrivalTimePemesanan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="07:00 WIB"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>
                            <TextView
                                android:id="@+id/tvArrivalDatePemesanan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="12 Juli 2025"
                                android:textSize="14sp"
                                android:textColor="#666666" />
                            <TextView
                                android:id="@+id/tvArrivalLocationPemesanan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="G. Sitoli - Pelabuhan Pelindo"
                                android:textSize="14sp"
                                android:textColor="#666666" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="12dp"/>

                    <TextView
                        android:id="@+id/tvJenisPenyeberanganPemesanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Jenis Penyeberangan: Penumpang dan Kendaraan"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:id="@+id/tvPassengerCountPemesanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Jumlah Penumpang: Dewasa (x1), Bayi (x0)"
                        android:textColor="#666666"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvUpgradeDetailsPemesanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Fasilitas Upgrade: Kasur Ranjang (x1), Kamar 4 Bed (x1)"
                        android:textColor="@color/Blue"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"/>

                    <View
                        android:id="@+id/dividerPricePemesanan"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="12dp"
                        android:visibility="visible"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga Tiket"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/tvPricePemesanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rp 93,100"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail Pemesan"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Lengkap"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                    <EditText
                        android:id="@+id/etNamaLengkapPemesanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan nama lengkap"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="@drawable/rounded_edittext_background"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor Telepon"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                    <EditText
                        android:id="@+id/etNomorTeleponPemesanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan nomor telepon"
                        android:inputType="phone"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="@drawable/rounded_edittext_background"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14sp"
                        android:textColor="#666666"/>
                    <EditText
                        android:id="@+id/etEmailPemesanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masukkan alamat email"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:background="@drawable/rounded_edittext_background"
                        android:layout_marginBottom="12dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:id="@+id/llPassengerInputContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Penumpang"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="12dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textSize="14sp"
                android:textColor="#888888"/>
            <TextView
                android:id="@+id/tvTotalPricePemesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rp 93,100"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnPesanTiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan Tiket"
            android:backgroundTint="@color/Blue"
            android:textColor="@android:color/white"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>